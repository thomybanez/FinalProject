<div class="club-stage" style="height:100vh; width: 100%;">	

	<div style="display:flex;">
		<div class="side-bar-menu">
			<%= render "navigation" %>		
		</div>	

		<div class="right" style="margin-left: 390px;">
				<div class="neon-container">
					<div class="neon">Guest </div>
					<div class="flux">Show </div>
					<div class="crab">Time </div>
				</div>				

                <div style="display:flex; margin-top: 80px; width: 50vw;">
                <% if @performer.photos.present? %>
                    <% @performer.photos.each do |photos| %>
                        <div class="container-performer">
                            <div class="box-performer" style="--i:0;">
                                <i></i>
                                <div class="content">
                                    <%= image_tag photos.variant(resize_to_fill: [1000, 1000]) %>                    
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
                </div>

                <div style="position: fixed; bottom: 20px; border: 2px solid white; z-index: 999999; color: white; padding: 20px; background-color: #0e1538; border-radius: 20px;">
                    <%= form_with scope: @performer, url: performers_update_path, html: { autocomplete: "off"} do |form| %>
                
                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.label :stage_name %>
                            <div>
                                <%= form.text_field :stage_name %><br>
                            </div>
                        </div>

                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.label :description %>
                            <div>
                                <%= form.text_field :description %><br>
                            </div>
                        </div>

                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.label "Phone" %>
                            <div>
                                <%= form.text_field :contact_number %><br>
                            </div>
                        </div>

                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.label :age %>
                            <div>
                                <%= form.text_field :age %><br>
                            </div>
                        </div>


                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.label :gender %>
                            <div>
                                <%= form.collection_select :gender, %w[male female], :to_s, :humanize, { prompt: 'Select Gender' } %>
                            </div>
                        </div>

                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.label :location %>
                            <div>
                                <%= form.text_field :location %><br>
                            </div>
                        </div>

                        <div style="width: 300px; display: flex; justify-content: space-between;">
                                <%= form.file_field :photos, multiple: true %>
                            <div>
                                <%= form.submit "Save" %>
                            </div>
                        </div>

                    <% end %>
                 </div>        
        </div>
    </div>
</div>





