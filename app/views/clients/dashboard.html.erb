<div class="opus-ktv" style="height:100vh; width: 100%;">	

	<div style="display:flex;">

		<div class="side-bar-menu">
			<%= render "navigation" %>
		
			
		<div style="color: white; position: fixed; left: 0; bottom: 0;">
		<h4>Welcome, <%= @client.nick_name %></h4>
			<p>Age: <%= @client.age %></p>
			<p>Gender: <%= @client.gender %></p>
		</div>		
			
	</div>
		
		

					<div style="display:column;margin-left: 250px;height:100vh; align-items:center;">
					<div class="neon-container">
						<div class="neon">SING </div>
						<div class="flux">DANCE </div>
						<div class="crab">FUN </div>
					</div>


					<div class="neon-text" style="position:fixed;">
						<div class="lightbar"></div>
						<div class="topLayer"></div>
						<h2>MaMaママさん日本のKTV</h2>
					</div>

				


						<div style="display:flex; margin-top: 80px;">
						<% @performer.each do |performer| %>
							<div class="container" style="margin: 10px;">
								<div class="box" style="--i:0;">
									<i></i>
									<div class="content">
										<% performer.photos.each do |photo| %>
										<%= image_tag photo.variant(resize_to_fill: [200, 300]) %>
											<h2><%= performer.stage_name %><br>
											<span>Age: <%= performer.age %></span><br>
											<span>Gender: <%= performer.gender %></span></h2>
											<%= link_to "Book Now", clients_show_path(performer.id) %>
										<% end %>
									</div>
								</div>
							</div>
						<% end %>
						</div>
					</div>
	</div>
</div>