<div style="display:flex; flex-direction: column;">
    <div style="display: flex; flex-direction: column;">
        <div class="neon-button" style="text-align: center;">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Clients
        </div>

    <div style="color: white; border: 2px solid white; padding: 30px; border-radius: 20px;">
      <%= form_with scope: @client, url: clients_create_path , method: 'post', html: {autocomplete: "off"}  do |form| %>

          <%= form.label :email %><br>
          <%= form.text_field :email %><br>

          <%= form.label :password %><br>
          <%= form.password_field :password %><br>

          <%= form.label :password_confirmation %><br>
          <%= form.password_field :password_confirmation %><br>
        <div style="display: flex; align-item: center; justify-content: center; margin-top: 30px;">
          <%= form.submit "Register"%>
        </div>
      <% end %>
      
      <i style="font-size: 12px; color: green;">want to go back?<br><%= link_to "Return to Login/Register", users_home_path %></i>
    </div>

    <div style="color:red">
    <% @client.errors.full_messages.each do |error| %>
        <%= error %><br>
      <% end %>
    </div>
</div>
