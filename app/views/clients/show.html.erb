<div class="opus-ktv" style="height:100vh; width: 100%;">

    <div style="display:flex;">
        <div class="side-bar-menu">
            <%= render "navigation" %>
        </div>

        <div class="right">
                <div class="neon-container">			
                    <div class="crab">Sweet</div>
                    <div class="flux">Vibe</div><br>
                    <div class="neon">Baby</div>      
                </div>

                <div style="display: flex; margin-top: 80px;">
                
					<% @performer.photos.each do |photo| %>
						<div class="container-performer" style="margin: 10px; border:">
							<div class="box-performer" style="--i:0;">
								<i></i>
                                <div class="content">										
                                    <%= image_tag photo.variant(resize_to_fill: [200, 300]) %>
                                </div>
                            </div>
                        </div>
					<% end %>
                    
				</div>

            <div class="table-container">
                <%= form_with scope: @booking, url: bookings_create_path(@client.id), html: { autocomplete: "off" } do |form| %>
                    <table class="table">            
                        <thead>
                            <tr>                            
                                <th colspan="4">Special Menu</th>             
                            </tr>
                        </thead>

                        <tbody>                            
                            <% @service.each do |service| %>
                                <tr>            
                                    <td style="text-align: center;"><%= service.category %></td>
                                    <td style="text-align: center;"><%= service.service_name %></td>
                                    <td style="text-align: center;"><%= service.fee %></td>
                                    <td style="text-align: center;"><%= form.radio_button :service_id, service.id %></td>                                    
                                </tr>                      
                            <% end %>

                                <tr>
                                    <td>Date:</td>
                                    <td><%= form.select :booking_month, options_for_select(Date::MONTHNAMES.compact.map.with_index { |m, i| [m, i + 1] }) %></td>
                                    <td><%= form.select :booking_day, options_for_select((1..31).to_a) %></td>
                                </tr>
                                <tr>                          
                                    <td>Time:</td>
                                    <td><%= form.time_field :booking_time %></td>
                                </tr>

                                <tr>
                                    <td colspan="4" style="text-align: center;"><%= form.submit "Book Now" %></td>
                                </tr>                            
                        </tbody>                
                    </table>            
                <% end %>

                
            </div>
        </div>
    </div>        
</div>
