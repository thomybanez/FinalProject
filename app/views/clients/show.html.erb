<div class="opus-ktv" style="height:100vh; width: 100%;">

    <div style="display:flex;">
        <div class="side-bar-menu">
            <%= render "navigation" %>
        </div>

        <div class="right">
                <div class="neon-container">			
                    <div class="crab">Sweet</div>
                    <div class="flux">Vibe</div><br>
                    <div class="neon">Baby</div>      
                </div>     

                <div class="neon-text" style="position:fixed;">
					<div class="lightbar"></div>
					<div class="topLayer"></div>
					<h2><%= @performer.stage_name %> <%= @performer.age %>Yrs <%= @performer.gender %></h2>                    
				</div>                

                <div style="display: flex; margin-top: 80px;">
                
					<% @performer.photos.each do |photo| %>
						<div class="container" style="margin: 10px; border:">
							<div class="box" style="--i:0;">
								<i></i>
                                <div class="content">										
                                    <%= image_tag photo.variant(resize_to_fill: [200, 300]) %>
                                </div>
                            </div>
                        </div>
					<% end %>
                    
				</div>

            <div class="table-container" style="position: fixed; right: 0; top: 20vh;">
                <%= form_with scope: @booking, url: bookings_create_path(@client.id), html: { autocomplete: "off" } do |form| %>
                    <table class="table">            
                        <thead>                
                            <tr>
                            <th colspan="4">Special Menu</th>             
                            </tr>
                        </thead>

                        <tbody>
                            <% @service.each do |service| %>
                                <tr>            
                                    <td><%= service.category %></td>
                                    <td><%= service.service_name %></td>
                                    <td><%= service.rate_hour %></td>
                                    <td><%= form.radio_button :service_id, service.id %></td>                           
                                </tr>                      
                            <% end %>
                            <tr>
                                <td colspan="4" style="text-align: center;"><%= form.submit "Book Now" %></td>
                            </tr>
                            
                        </tbody>                
                    </table>            
                <% end %>

                
            </div>
        </div>
    </div>        
</div>
